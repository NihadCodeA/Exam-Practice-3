    ======================================================== -->
</head>

<body>


<div class="container">
    <form method="post" asp-action="login" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-6">
                <label asp-for="Fullname" class="form-label">Fullname <sup class="text-danger">*</sup></label>
                <input asp-for="Fullname" class="form-control" placeholder="Fullname">
                <span class="text-danger" asp-validation-for="Fullname"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Username" class="form-label">Username <sup class="text-danger">*</sup></label>
                <input asp-for="Username" class="form-control" placeholder="Username">
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Email" class="form-label">Email <sup class="text-danger">*</sup></label>
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Password" class="form-label">Password <sup class="text-danger">*</sup></label>
                <input asp-for="Password" class="form-control" placeholder="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="ConfrimPassword" class="form-label">ConfrimPassword <sup class="text-danger">*</sup></label>
                <input asp-for="ConfrimPassword" class="form-control" placeholder="ConfrimPassword">
                <span class="text-danger" asp-validation-for="ConfrimPassword"></span>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
        <div class="d-flex justify-content-around">
            <div><a class="btn btn-primary" asp-controller="account" asp-action="login">Go to Login →</a></div>
            <div><a class="btn btn-success" asp-controller="home" asp-action="index">←Back to home</a></div>
        </div>
</div>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>